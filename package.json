{
  "name": "@fink/cli",
  "version": "0.0.0-semantically-released",
  "description": "CLI for compiling fink to JS",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fink-lang/cli"
  },
  "bugs": "https://github.com/fink-lang/cli/issues",
  "homepage": "https://github.com/fink-lang/cli",
  "scripts": {
    "default": "run clean test build",
    "clean": "rimraf ./build",
    "build": "run build:*",
    "build:dir": "mkdir -p ./build/pkg/",
    "build:fnk": "fnk --src src --out-dir build/pkg --ignore 'src/**/*.test.fnk'",
    "build:files": "cp ./package.json ./README.md ./LICENSE ./build/pkg/",
    "test": "run jest",
    "jest": "jest --verbose --runInBand --no-cache ",
    "cd": "run clean test build release",
    "release": "semantic-release"
  },
  "bin": {
    "fnk": "./index.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@fink/loxia": ">=13.0.0",
    "@fink/larix": ">=9.0.0"
  },
  "devDependencies": {
    "@fink/cli": "^6.2.1",
    "@fink/jest": "^5.4.0",
    "@fink/larix": "^12.3.0",
    "@fink/loxia": "^13.0.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "jest-cli": "^26.4.2",
    "npx-run": "^2.1.2",
    "semantic-release": "^17.1.2"
  },
  "dependencies": {
    "@fink/js-interop": "^1.1.1",
    "@fink/std-lib": "^4.0.1",
    "minimatch": "^3.0.4",
    "yargs": "^16.0.3"
  }
}
